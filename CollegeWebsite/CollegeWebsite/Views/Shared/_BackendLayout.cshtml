@{
    string pageName = @ViewContext.RouteData.Values["action"].ToString();
    string baseUrl = Url.ActionContext.HttpContext.Request.Scheme + "://" + Url.ActionContext.HttpContext.Request.Host;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="CodeAppStore" name="author">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Shahid Bishnu Dhani Memorial Polytechnic Institute.">
    <meta name="keywords" content="College Website">

    <!-- Open Graph -->
    <meta property="og:title" content="Shahid Bishnu Dhani Memorial Polytechnic Institute">
    <meta property="og:description" content="Shahid Bishnu Dhani Memorial Polytechnic Institute | Shahid Bishnu Dhani Memorial Polytechnic Institute is a newly established educational institution which primarily attempts to contribute to the development of the country through the production of skilled and semi-skilled human resources. ">
    <meta property="og:image" content="@(baseUrl+"/Nav_Logo_Dark.png")">
    <meta property="og:url" content="@baseUrl">
    <meta name="twitter:card" content="Shahid Bishnu Dhani Memorial Polytechnic Institute | Shahid Bishnu Dhani Memorial Polytechnic Institute is a newly established educational institution which primarily attempts to contribute to the development of the country through the production of skilled and semi-skilled human resources. ">


    <!-- SITE TITLE -->
    <title>@ViewData["Title"]  Shahid Bishnu Dhani Memorial Polytechnic Institute</title>

    <!-- Favicon Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">

    <!-- Fontfaces CSS-->
    <link href="~/assets/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/assets/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/assets/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/assets/css/theme.css" rel="stylesheet" media="all">


</head>

<body>
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none position-fixed fixed-top bg-white border">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="index.html">
                            <h4><i class="fas fa-cogs"></i>  Control Panel</h4>
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile js-scrollbar1 bg-white">
                <div class="container-fluid navbar-sidebar2">
                    <ul class="menu-sidebar2__content list-unstyled navbar__list navbar-mobile__list list-unstyled bg-white">
                        <li>
                            <a href="~/Home/Index" style="color:@(ViewBag.Page == "Index" ? "royalblue" : "")">
                                <i class="zmdi zmdi-arrow-back zmdi-hc-lg"></i>Back To Site
                            </a>
                        </li>
                        <li>
                            <a href="~/Distributor/DistributorArea">
                                <i class="zmdi zmdi-map zmdi-hc-lg" style="color:@(ViewBag.Page == "Distributon Area" ? "royalblue" : "")"></i>Distributor Area
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="~/Home/Index">
                    <h4><i class="fas fa-cogs"></i>  Control Panel</h4>
                </a>
            </div>
            <div class="menu-sidebar2__content js-scrollbar1">
                <nav class="navbar-sidebar2">
                    <ul class="list-unstyled navbar__list">
                        <li class="@(ViewBag.Page == "Index" ? "active" : " ")">
                            <a href="~/Home/Index">
                                <i class="zmdi zmdi-arrow-back zmdi-hc-lg"></i>Back To Site
                            </a>
                        </li>
                        <li class="@(ViewBag.Page == "Distributon Area" ? "active" : " ")">
                            <a href="~/Distributor/DistributorArea"><i class="zmdi zmdi-account zmdi-hc-lg"></i> Users</a>
                        </li>
                        <li class="@(ViewBag.Page == "Distributon Area" ? "active" : " ")">
                            <a href="~/Distributor/DistributorArea"><i class="zmdi zmdi-view-web zmdi-hc-lg"></i> Website</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <div></div>
                            <div class="header-button">
                                <div class="noti-wrap">
                                    <div class="noti__item js-item-menu">
                                    </div>
                                    <div class="noti__item js-item-menu">
                                    </div>
                                </div>
                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="image">
                                            <img src="~/images/post_user.jpg" alt="" style="max-height:500px; width:auto;" />
                                        </div>
                                        <div class="content">
                                            <a class="js-acc-btn">Dibesh Raj Subedi</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <img src="~/images/post_user.jpg" alt="" style="max-height:500px; width:auto;" />
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        Dibesh Raj Subedi
                                                    </h5>
                                                    <span class="email">Dibesh@gmail.com </span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="#">
                                                        <i class="zmdi zmdi-settings"></i>Setting
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a asp-controller="Login" asp-action="Logout" method="get">
                                                    <i class="zmdi zmdi-power"></i>Logout
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->

            <div class="main-content">
                <div class="section__content--p30">
                    <div class="container-fluid dark">
                        @RenderBody()

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>© @DateTime.Now.Year All Rights Reserved by Shahid Bishnu Dhani Memorial Polytechnic Institute</p>
                                    <p>Queries for <a href="mailto:dibesh@codeappstore.com">Support Team</a></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row mt-80 d-sm-none d-md-none d-lg-block d-xl-none ">
                <br /><br />
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <!-- Jquery JS-->
    <script src="~/assets/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/assets/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/assets/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/assets/vendor/slick/slick.min.js">
    </script>
    <script src="~/assets/vendor/wow/wow.min.js"></script>
    <script src="~/assets/vendor/animsition/animsition.min.js"></script>
    <script src="~/assets/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/assets/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/assets/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/assets/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/assets/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/assets/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/assets/vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="~/assets/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Validation Dependencies-->
    <script src="~/validation/jquery.validate.min.js"></script>
    <script src="~/validation/jquery.validate.unobtrusive.min.js"></script>

    <script>
        setTimeout(() => {
            $('.alert').slideUp();
        }, 5000);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
