@using Microsoft.AspNetCore.Components.Forms
@model College.Model.DataTransferObject.AuthExtraDto.LoginModelDto
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login -";
}
<div class="page-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-content--bge5">
                <div class="container container-fluid">
                    <div class="login-wrap">
                        @(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))
                        <div class="login-content">
                            <div class="login-logo">
                                <a href="#">
                                    <img src="~/Polytechnic Institute_Dark.png" style="height: auto; width: 50%;"/>
                                </a>
                            </div>
                            <div class="login-form m-t-50">
                                <form asp-controller="Login" asp-action="Login" method="post" asp-antiforgery="true">

                                    <div asp-validation-summary="ModelOnly" class="text-danger">
                                        <span>Please correct the following errors</span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="au-input au-input--full" type="email" required/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" class="au-input au-input--full" type="password" required minlength="8"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="login-checkbox">
                                        <label>
                                            <input type="checkbox" asp-for="RememberMe"/> Remember Me
                                        </label>
                                        <label>
                                            <a asp-controller="Reset" asp-action="ForgetPassword">Forget Password ?</a>
                                        </label>
                                    </div>
                                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}