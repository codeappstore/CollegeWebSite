@using College.Helpers
@using College.Model.DataTransferObject.FrontEndOtherDto
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string pageName = @ViewContext.RouteData.Values["action"].ToString();
    string baseUrl = Url.ActionContext.HttpContext.Request.Scheme + "://" + Url.ActionContext.HttpContext.Request.Host;
}@{
    var LayoutModel = HttpContextAccessor.HttpContext.Session.GetComplexData<LayoutModelDto>("_Layout");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="CodeAppStore" name="author">
    <meta content="CodeAppStore" name="Developed By">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Shahid Bishnu Dhani Memorial Polytechnic Institute.">
    <meta name="keywords" content="Shahid Bishnu Dhani Memorial Polytechnic Institute College Website">

    <!-- Open Graph -->
    <meta property="og:title" content="Shahid Bishnu Dhani Memorial Polytechnic Institute">
    <meta property="og:description" content="Shahid Bishnu Dhani Memorial Polytechnic Institute | Shahid Bishnu Dhani Memorial Polytechnic Institute is a newly established educational institution which primarily attempts to contribute to the development of the country through the production of skilled and semi-skilled human resources. ">
    <meta property="og:image" content="@(baseUrl+"/Polytechnic Institute_Dark.png")">

    <meta property="og:url" content="@baseUrl">
    <meta name="twitter:card" content="Shahid Bishnu Dhani Memorial Polytechnic Institute | Shahid Bishnu Dhani Memorial Polytechnic Institute is a newly established educational institution which primarily attempts to contribute to the development of the country through the production of skilled and semi-skilled human resources. ">


    <!-- SITE TITLE -->
    <title>@ViewData["Title"]  Shahid Bishnu Dhani Memorial Polytechnic Institute</title>

    <!-- Favicon Icon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">

    <!-- Animation CSS -->
    <link rel="stylesheet" href="~/css/animate.css">

    <!-- Latest Bootstrap min CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Font -->
    <link href="~/css/css.css?family=Poppins:200,300,400,500,600,700,800,900&amp;display=swap" rel="stylesheet">
    <link href="~/css/css2-2.css?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/linearicons.css">
    <link rel="stylesheet" href="~/css/flaticon.css">

    <!--- owl carousel CSS-->
    <link rel="stylesheet" href="~/lib/owlcarousel/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/lib/owlcarousel/css/owl.theme.css">
    <link rel="stylesheet" href="~/lib/owlcarousel/css/owl.theme.default.min.css">

    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <link rel="stylesheet" id="layoutstyle" href="~/color/theme-blue.css">

</head>
<body>
    <!-- LOADER -->
    <div id="preloader">
        <div class="lds-ellipsis">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- END LOADER -->
    <!-- START HEADER -->
    <header class="header_wrap fixed-top light_skin sticky_dark_skin main_menu_uppercase transparent_header header_with_topbar dd_dark_skin">
        <div class="top-header light_skin d-none d-md-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">

                    </div>
                    @if (LayoutModel.Footer != null)
                    {
                        <div class="col-md-6">
                            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-end">
                                <ul class="social_icons social_white">
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.FacebookLink)?"#":LayoutModel.Footer.FacebookLink)" target="_blank"><i class="ion-social-facebook"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.FacebookLink)?"#":LayoutModel.Footer.FacebookLink)" target="_blank"><i class="ion-social-twitter"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.FacebookLink)?"#":LayoutModel.Footer.FacebookLink)" target="_blank"><i class="ion-social-googleplus"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.FacebookLink)?"#":LayoutModel.Footer.FacebookLink)" target="_blank"><i class="ion-social-instagram-outline"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img class="logo_light" src="~/Nav_Logo_Light.png" alt="logo">
                    <img class="logo_dark" src="~/Nav_Logo_Dark.png" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-expanded="false">
                    <span class="ion-android-menu"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li><a class="nav-link nav_item @(pageName=="Index"?"active":"")" asp-area="" asp-controller="Home" asp-action="Index">HOME</a></li>

                        <li class="dropdown">
                            <a class="dropdown-toggle nav-link @(pageName=="Prospectus"||pageName=="About"||pageName=="Background"?"active":"")" data-toggle="dropdown"
                               href="#">ABOUT US</a>
                            <div class="dropdown-menu">
                                <ul>
                                    <li><a class="dropdown-item nav-link nav_item  @(pageName=="About"?"active":"")" asp-area="" asp-controller="Home" asp-action="About">ABOUT US</a></li>
                                    <li>
                                        <a class="dropdown-item nav-link nav_item @(pageName=="Prospectus"?"active":"")" asp-area="" asp-controller="Home" asp-action="Prospectus">Prospectus</a>
                                    </li>
                                    <li><a class="dropdown-item nav-link nav_item  @(pageName=="Background"?"active":"")" asp-area="" asp-controller="Home" asp-action="Background">BACKGROUND</a></li>
                                </ul>
                            </div>
                        </li>
                        <li><a class="nav-link nav_item  @(pageName=="Mayor"?"active":"")" asp-area="" asp-controller="Home" asp-action="Mayor">Mayor's Saying</a></li>
                        <li><a class="nav-link nav_item  @(pageName=="Downloads"?"active":"")" asp-area="" asp-controller="Home" asp-action="Downloads">Downloads</a></li>
                        <li><a class="nav-link nav_item  @(pageName=="Gallery"?"active":"")" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a></li>
                        <li><a class="nav-link nav_item  @(pageName=="Faculties"?"active":"")" asp-area="" asp-controller="Home" asp-action="Faculties">Faculties</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle nav-link @(pageName=="Forestry"||pageName=="Agriculture"?"active":"")" data-toggle="dropdown"
                               href="#">ACADEMICS</a>
                            <div class="dropdown-menu">
                                <ul>
                                    <li><a class="dropdown-item nav-link nav_item @(pageName=="Forestry"?"active":"")" asp-area="" asp-controller="Home" asp-action="Forestry">FORESTRY</a></li>
                                    <li>
                                        <a class="dropdown-item nav-link nav_item @(pageName=="Agriculture"?"active":"")" asp-area="" asp-controller="Home" asp-action="Agriculture">AGRICULTURE</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li><a class="nav-link nav_item  @(pageName=="Notice"?"active":"")" asp-area="" asp-controller="Home" asp-action="Notice">Notice</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- END HEADER -->

    @RenderBody()

    <!-- START SECTION TESTIMONIAL -->
    @if (LayoutModel.StudentSay != null && LayoutModel.Students != null)
    {
        if (LayoutModel.Students.Count > 0)
        {
            <div class="section background_bg overlay_bg_50" data-img-src="@((string.IsNullOrWhiteSpace(LayoutModel.StudentSay.Image)?"/images/cta_bg.jpg": baseUrl+LayoutModel.StudentSay.Image.Replace(@"\", "/")))" style="background-image: url('@((string.IsNullOrWhiteSpace(LayoutModel.StudentSay.Image)?"/images/cta_bg.jpg": baseUrl+LayoutModel.StudentSay.Image.Replace(@"\", "/")))');">
                <!--data-parallax-bg-image="@((string.IsNullOrWhiteSpace(LayoutModel.StudentSay.Image)?"/images/cta_bg.jpg": LayoutModel.StudentSay.Image.Replace(@"\", "/")))"-->
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md-8 animation" data-animation="fadeInUp" data-animation-delay="0.2s">
                            <div class="heading_s1 text-center">
                                <h2 class="text-light">Our Students Say!</h2>
                            </div>
                            <p class="text-center text-light">
                                @(string.IsNullOrWhiteSpace(LayoutModel.StudentSay.Slogan) ? "" : LayoutModel.StudentSay.Slogan)
                            </p>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 animation" data-animation="fadeInUp" data-animation-delay="0.3s">

                            <div class="testimonial_slider testimonial_style1 carousel_slider owl-carousel owl-theme nav_style1"
                                 data-nav="true" data-dots="false" data-margin="20" data-loop="true" data-autoplay="true"
                                 data-responsive='{"0":{"items": "1"}, "767":{"items": "2"}, "1199":{"items": "3"}}'>
                                @foreach (var item in LayoutModel.Students)
                                {
                                    <div class="testimonial_box radius_all_10">
                                        <div class="author_info">
                                            <div class="author_img">
                                                <img src="@(string.IsNullOrWhiteSpace(item.Image) ? "/images/user.png" : item.Image)" alt="@(string.IsNullOrWhiteSpace(item.StudentName) ? "Student" : item.StudentName)">
                                            </div>
                                            <div class="author_name">
                                                <h6>@(string.IsNullOrWhiteSpace(item.StudentName) ? "Student" : item.StudentName)</h6>
                                                <span>@(string.IsNullOrWhiteSpace(item.StudentDesignation) ? "Student" : item.StudentDesignation)</span>
                                            </div>
                                        </div>
                                        <div class="testimonial_desc">
                                            <p>
                                                @(string.IsNullOrWhiteSpace(item.Description) ? "I enjoy learning and exploring with my teachers and friends." : item.Description)
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }

    <!-- END SECTION TESTIMONIAL -->
    <!-- START SECTION WHY CHOOSE -->
    <div class="section bg_light_blue">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 col-md-12 animation" data-animation="fadeInUp" data-animation-delay="0.2s">
                    <div class="icon_box icon_box_style1 box_shadow1 text-center">
                        <div class="icon ibc_orange">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        @if (LayoutModel.SalientFeatures != null)
                        {
                            <div class="icon_box_content">
                                <h5>The salient features of <br /> Shahid Bishnu Dhani Polytechnic Institute</h5>
                                <div class="align-items-center">
                                    <ul class="text-left">
                                        @if (LayoutModel.SalientFeatures.Count > 0)
                                        {
                                            foreach (var features in LayoutModel.SalientFeatures)
                                            {
                                                <li>@features.Feature</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END SECTION WHY CHOOSE -->
    <!-- START FOOTER -->
    <footer class="footer_dark">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-sm-6">
                        <div class="widget">
                            <div class="footer_logo">
                                <a asp-controller="Home" asp-action="Index"><img src="~/Nav_Logo_Light.png" alt="logo"></a>
                            </div>
                            @if (LayoutModel.Footer != null)
                            {
                                <p>
                                    @(string.IsNullOrWhiteSpace(LayoutModel.Footer.Slogan)?"":LayoutModel.Footer.Slogan)
                                </p>
                                <ul class="social_icons rounded_social social_white social_style1">
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.FacebookLink)?"#":LayoutModel.Footer.FacebookLink)" target="_blank"><i class="ion-social-facebook"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.TweeterLink)?"#":LayoutModel.Footer.TweeterLink)" target="_blank"><i class="ion-social-twitter"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.GooglePlusLink)?"#":LayoutModel.Footer.GooglePlusLink)" target="_blank"><i class="ion-social-googleplus"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.YoutubeLink)?"#":LayoutModel.Footer.YoutubeLink)" target="_blank"><i class="ion-social-youtube-outline"></i></a></li>
                                    <li><a href="@(string.IsNullOrWhiteSpace(LayoutModel.Footer.InstaGramLink)?"#":LayoutModel.Footer.InstaGramLink)" target="_blank"><i class="ion-social-instagram-outline"></i></a></li>
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="col-xl-2 col-sm-6 col-6">
                        <div class="widget">
                            <h6 class="widget_title">Useful Links</h6>
                            <ul class="widget_links">
                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Prospectus">Prospectus</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Background">Background</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Mayor">Mayor's Saying</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Downloads">Downloads</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Faculties">Faculties</a></li>
                                <li>
                                    <h6 class="widget_title">Academics</h6>
                                </li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Forestry">Forestry</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Agriculture">Agriculture</a></li>
                                <li><a asp-area="" asp-controller="Home" asp-action="Notice">Notice</a></li>

                            </ul>
                        </div>
                    </div>


                    <div class="col-xl-2 col-sm-6 col-6">
                        <div class="widget">
                            <h6 class="widget_title">Important Links</h6>
                            <ul class="widget_links">
                                @if (LayoutModel.ImportantLinks != null)
                                {
                                    if (LayoutModel.ImportantLinks.Count > 0)
                                    {
                                        foreach (var item in LayoutModel.ImportantLinks)
                                        {
                                            <li><a href="@(string.IsNullOrWhiteSpace(item.Link)?"#":item.Link)" target="_blank">@(string.IsNullOrWhiteSpace(item.Title)?"Important Link":item.Title)</a></li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="col-xl-4 col-sm-6">
                        <div class="widget">
                            <h6 class="widget_title">Contact Info</h6>
                            <ul class="contact_info contact_info_light">
                                @if (LayoutModel.Footer != null)
                                {
                                    <li>
                                        <i class="ti-location-pin"></i>
                                        <p>@(string.IsNullOrWhiteSpace(LayoutModel.Footer.ContactAddress)? "Barbardiya Municipality ward no 6, Jaynagar" : LayoutModel.Footer.ContactAddress)</p>
                                    </li>
                                    <li>
                                        <i class="ti-email"></i>
                                        <a href="mailto:@(string.IsNullOrWhiteSpace(LayoutModel.Footer.ContactEmail)? "bishnudhani@gmail.com" : LayoutModel.Footer.ContactEmail)" class="text-light">@(string.IsNullOrWhiteSpace(LayoutModel.Footer.ContactEmail)? "bishnudhani@gmail.com" : LayoutModel.Footer.ContactEmail)</a>
                                    </li>
                                    <li>
                                        <i class="ti-mobile"></i>
                                        <a href="tel:@(string.IsNullOrWhiteSpace(LayoutModel.Footer.ContactNumber)? "084-404100" : LayoutModel.Footer.ContactNumber)" class="text-light">@(string.IsNullOrWhiteSpace(LayoutModel.Footer.ContactNumber)? "084-404100" : LayoutModel.Footer.ContactNumber)</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <div class="bottom_footer bg_dark2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-md-0 text-center text-md-left">
                            &copy; @DateTime.Now.Year All Rights Reserved by <span class="text_default">Shahid Bishnu Dhani Memorial Polytechnic Institute</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <ul class="list_none footer_link text-center text-md-right">
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- END FOOTER -->

    <a href="#" class="scrollup" style="display: none;"><i class="ion-ios-arrow-up"></i></a>

    <!-- Latest jQuery -->
    <script src="~/js/jquery-1.12.4.min.js"></script>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <!-- Latest compiled and minified Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- owl-carousel min js  -->
    <script src="~/lib/owlcarousel/js/owl.carousel.min.js"></script>
    <!-- magnific-popup min js  -->
    <script src="~/js/magnific-popup.min.js"></script>
    <!-- waypoints min js  -->
    <script src="~/js/waypoints.min.js"></script>
    <!-- parallax js  -->
    <script src="~/js/parallax.js"></script>
    <!-- countdown js  -->
    <script src="~/js/jquery.countdown.min.js"></script>
    <!-- jquery.countTo js  -->
    <script src="~/js/jquery.countTo.js"></script>
    <!-- imagesloaded js -->
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <!-- isotope min js -->
    <script src="~/js/isotope.min.js"></script>
    <!-- jquery.appear js  -->
    <script src="~/js/jquery.appear.js"></script>
    <!-- jquery.dd.min js -->
    <script src="~/js/jquery.dd.min.js"></script>
    <!-- slick js -->
    <script src="~/js/slick.min.js"></script>
    <!-- scripts js -->
    <script src="~/js/scripts.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
