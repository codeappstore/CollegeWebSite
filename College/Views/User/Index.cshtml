@using System.Collections
@using Microsoft.AspNetCore.Components.Forms
@model IList<College.Model.DataTransferObject.AuthDto.AuthorDisplayModelDto>
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewData["Title"] = "User List -";
    int SearialNumber = 1;
}
@(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <strong> Users List</strong>
            <a asp-controller="User" asp-action="Create" class="btn btn-primary text-light" style="float: right;">
                <i class="fas fa-plus"></i> Add
            </a>
        </div>
        <div class="card-body card-block">
            @if (Model.Count > 0)
            {
                <table class="dynamic-table table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th style="text-align: center;">SN</th>
                            <th style="text-align: center;">Full Name</th>
                            <th style="text-align: center;">User Name</th>
                            <th style="text-align: center;">Email</th>
                            <th style="text-align: center;">Image</th>
                            <th style="text-align: center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var UserItem in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@(SearialNumber++)</td>
                                <td style="text-align: center;">@UserItem.FullName</td>
                                <td style="text-align: center;">@UserItem.UserName</td>
                                <td style="text-align: center;"><a href="mailto:@(UserItem.Email)">@UserItem.Email</a></td>
                                <td style="text-align: center;"><img src="@(UserItem.Image == null ? "~/images/user.png" : UserItem.Image)" alt="Not Found" style="max-height: 50px; width: auto;" /></td>
                                <td style="padding-left: 4%;">
                                    <a href="#"> <i class="fas fa-edit" style="color: green;" data-toggle="tooltip" data-placement="left" title="Edit"></i></a> |
                                    <a href="#"><i class="fas fa-trash" style="color: red;"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center"><h4>Dat not found</h4></div>
            }
        </div>
    </div>
</div>