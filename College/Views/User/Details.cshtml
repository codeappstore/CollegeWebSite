@using College.Model.Models
@model College.Model.DataTransferObject.AuthDto.AuthUpdateModelDto
@using Microsoft.AspNetCore.Components.Forms
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewData["Title"] = "User Details  -";
}
@(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>
                User Details
                <a asp-controller="User" asp-action="Edit" asp-route-id="@Model.AuthId" class="btn btn-primary text-light btn-sm" style="float: right;">
                    <i class="fas fa-edit"></i> Update
                </a>
            </h5>
        </div>
        <div class="card-body card-block">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="au-input au-input--full" type="text" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="au-input au-input--full" type="text" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="au-input au-input--full" type="email" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="au-input au-input--full" type="text" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" class="au-input au-input--full" type="date" disabled="disabled" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<AuthGender>()" class="form-control" disabled="disabled">
                            <option value="">Pick one</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="RoleId"></label>
                        <select asp-for="RoleId" class="form-control" disabled="disabled">
                            <option value="">Pick one</option>
                            <option value="1">Admin</option>
                            <option value="2">Developer</option>
                            <option value="3">Manager</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-sm-6">
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="au-input au-input--full" type="tel" disabled="disabled" />
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(@Model.Image))
                {
                    <div class="col-sm-12 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label asp-for="Image"></label>
                            <div class="col-sm-12 d-flex justify-content-center ">
                                <img asp-append-version="true" src="@Model.Image" alt="@Model.FullName's image not found" style="max-height: 200px; width: auto;" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
