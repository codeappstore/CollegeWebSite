@model College.Model.DataTransferObject.StudentSayStudents.StudentSayStudentsModelDto
@using College.Model.Models
@using Microsoft.AspNetCore.Components.Forms
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewData["Title"] = "Create Students Saying  -";
}
@(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>
                Create New Saying
                <a asp-controller="WebSite" asp-action="StudentsSay" class="btn btn-primary btn-sm text-light" style="float: right;">
                    <i class="fas fa-arrow-left"></i>  Back to sayings list
                </a>
            </h5>
        </div>
        <div class="card-body card-block">
            <form asp-action="StudentSayCreate" asp-controller="WebSite" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        <span>Please correct the following errors</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="StudentName"></label>
                            <input asp-for="StudentName" class="au-input au-input--full" type="text" required />
                            <span asp-validation-for="StudentName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="StudentDesignation"></label>
                            <input asp-for="StudentDesignation" class="au-input au-input--full" type="text" required />
                            <span asp-validation-for="StudentDesignation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" rows="5" placeholder="Description" class="au-input au-input--full" cols="40" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-sm-12 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="ImageString"></label>
                            <input asp-for="ImageString" type="file" class="dropify form-control-file" required data-max-file-size="5M" data-allowed-file-extensions="jpg jpeg png">
                            <p for="ImageString">Image (5MB)</p>
                            <span asp-validation-for="ImageString" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="form-actions form-group">
                    <button class="btn btn-success btn-sm" type="submit"><i class="fas fa-rocket"></i> Add</button>
                    <button class="btn btn-danger btn-sm" type="reset"><i class="fas fa-trash"></i> Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}