@using Microsoft.AspNetCore.Http
@model College.Model.DataTransferObject.OtherDto.FooterStudentSlogan
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{ string pageName = @ViewContext.RouteData.Values["action"].ToString();
    string baseUrl = HttpContextAccessor.HttpContext.Request.Scheme + "://" + Url.ActionContext.HttpContext.Request.Host;
}
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewData["Title"] = "Web Site  -";
}
@(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">
                    <i class="fas fa-columns text-primary"></i> Footer
                </h4>
            </div>
            <div class="card-body card-text">
                <p>
                    @Model.FooterSlogan
                </p>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="WebSite" asp-action="Footer" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">
                    <i class="fas fa-outdent text-primary"></i> The Salient Features
                </h4>
            </div>
            <div class="card-body">
                <div class="align-items-center">
                    <ul class="pl-3 text-left">
                        <li>Situated in the peaceful area away from the noise of the city</li>
                        <li>Well ventilated and echo free classrooms with comfortable seating arrangement</li>
                    </ul>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="WebSite" asp-action="Features" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            </div>
        </div>
    </div>


    <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">
                    <i class="fas fa-users text-primary"></i> Our Students Say!
                </h4>
            </div>
            <div class="card-body card-text">
                <p>
                    @Model.StudentSaySlogan
                </p>
            </div>
            <div class="card-footer text-center">
                <a sp-controller="WebSite" asp-action="StudentsSay" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
            </div>
        </div>
    </div>


    <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">
                    <i class="fas fa-desktop text-primary"></i> Other Pages
                </h4>
            </div>
            <div class="card-body text-center">
                <a asp-controller="Page" asp-action="Home" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-home"></i> Home</a>
                <a asp-controller="Page" asp-action="AboutUs" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-user"></i> About Us</a>
                <a asp-controller="Page" asp-action="Background" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-exclamation-circle"></i> Background</a>
                <a asp-controller="Page" asp-action="Staffs" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-users"></i> Staff and Faculties</a>
                <a asp-controller="Page" asp-action="Agriculture" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-globe"></i> Agriculture</a>
                <a asp-controller="Page" asp-action="Forestry" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-leaf"></i> Forestry</a>
                <a asp-controller="Page" asp-action="Privacy" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-info"></i> Privacy Policy</a>
                <a asp-controller="Page" asp-action="Popup" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-copy"></i> Popup</a>
                <a asp-controller="Page" asp-action="Mayor" class="btn btn-primary img-thumbnail m-2"><i class="fas fa-male"></i> Mayors' Saying</a>
            </div>
        </div>
    </div>

</div>