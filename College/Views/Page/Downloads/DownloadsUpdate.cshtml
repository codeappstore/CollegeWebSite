@model College.Model.DataTransferObject.DownloadsDto.DownloadModelDto
@{
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
    ViewData["Title"] = " Update Downloads -";
}
@(await Html.PartialAsync("~/Views/Shared/_AlertLayout.cshtml"))
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>
                Update Download File
                <a asp-controller="Page" asp-action="Downloads" class="btn btn-primary btn-sm text-light" style="float: right;">
                    <i class="fas fa-arrow-left"></i>  Back to downloads
                </a>
            </h5>
        </div>
        <div class="card-body card-block">
            <form asp-action="DownloadsUpdate" asp-controller="Page" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        <span>Please correct the following errors</span>
                    </div>
                </div>

                <input type="hidden" asp-for="FileId" />


                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="au-input au-input--full" type="text" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            <label asp-for="FileString"></label>
                            <input asp-for="FileString" type="file" class="dropify form-control-file" required data-max-file-size="30M">
                            <p for="ImageString">Files 30MB</p>
                            <span asp-validation-for="FileString" class="text-danger"></span>
                        </div>
                        @if (Model.FileLink != null)
                        {
                            <div class="row">
                                <div class="col-sm-12 d-flex justify-content-center ">
                                    <button class="btn btn-danger"> <i class="fas fa-file"></i><a class="text-light" href="@(Model.FileLink)" target="_blank">&nbsp;&nbsp;  @Model.Title</a></button>
                                </div>
                                <div class="col-sm-12">
                                    <p class="text-center">Current File has @Model.Extension extension</p>
                                </div>
                            </div>

                        }
                    </div>
                </div>

                <div class="form-actions form-group">
                    <button class="btn btn-success btn-sm" type="submit"><i class="fas fa-edit"></i> Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}